{
	"apiVersion": 2,
	"name": "core/tag-cloud",
	"title": "标签云",
	"category": "widgets",
	"description": "您最常使用的标签云。",
	"textdomain": "default",
	"attributes": {
		"numberOfTags": {
			"type": "number",
			"default": 45,
			"minimum": 1,
			"maximum": 100
		},
		"taxonomy": {
			"type": "string",
			"default": "post_tag"
		},
		"showTagCounts": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"html": false,
		"align": true
	},
	"editorStyle": "gc-block-tag-cloud-editor"
}
