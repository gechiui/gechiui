{
	"apiVersion": 2,
	"name": "core/post-comments",
	"title": "文章评论",
	"category": "theme",
	"description": "显示文章的评论。",
	"textdomain": "default",
	"attributes": {
		"textAlign": {
			"type": "string"
		}
	},
	"usesContext": [ "postId", "postType" ],
	"supports": {
		"html": false,
		"align": [ "wide", "full" ],
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontStyle": true,
			"__experimentalFontWeight": true,
			"__experimentalLetterSpacing": true,
			"__experimentalTextTransform": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		},
		"color": {
			"gradients": true,
			"link": true
		}
	},
	"style": [
		"gc-block-post-comments",
		"gc-block-buttons",
		"gc-block-button"
	]
}
