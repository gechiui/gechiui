{
	"apiVersion": 2,
	"name": "core/latest-comments",
	"title": "最新评论",
	"category": "widgets",
	"description": "显示您的最近评论的列表。",
	"keywords": [ "recent comments" ],
	"textdomain": "default",
	"attributes": {
		"commentsToShow": {
			"type": "number",
			"default": 5,
			"minimum": 1,
			"maximum": 100
		},
		"displayAvatar": {
			"type": "boolean",
			"default": true
		},
		"displayDate": {
			"type": "boolean",
			"default": true
		},
		"displayExcerpt": {
			"type": "boolean",
			"default": true
		}
	},
	"supports": {
		"align": true,
		"html": false
	},
	"editorStyle": "gc-block-latest-comments-editor",
	"style": "gc-block-latest-comments"
}
